{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.vscode": true,
    "**/node_modules": true,
    "**/.gitignore": true,
    "**/bun.lock": true,
    "bunfig.toml": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "IDX.aI.enableInlineCompletion": true,
  "IDX.aI.enableCodebaseIndexing": true,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "references.preferredLocation": "view",
  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "inlineChat.mode": "preview",
  "aiCommit.openRouterApiKey": "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",
  "aiCommit.model": "meta-llama/llama-4-scout:free",
  "aiCommit.prompt": "Generate a commit message: Start with a type (feat/fix/docs. Keep it under 50 characters. Use imperative mood. Do not quote. Do not output anything that is not a commit message. These are the changes:  {changes}",
  "git.enableSmartCommit": true,
  "extensions.ignoreRecommendations": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "git.autofetch": true
}
